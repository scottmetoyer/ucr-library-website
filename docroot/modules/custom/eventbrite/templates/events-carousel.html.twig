{#
/**
 * @file
 * Default theme implementation to display a carousel of Eventbrite events.
 *
 * Available variables:
 *   - events
 *
 * @ingroup themeable
 */
#}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        {% for event in events.events %}
            <li data-target="#carouselExampleIndicators" data-slide-to="0" {% if loop.first %} class="active" {% endif %}></li>
        {% endfor %}
    </ol>
    <div class="carousel-inner">
        {% for event in events.events %}
            <div class="carousel-item {% if loop.first %} active {% endif %}">
                <img src="{{ event.logo.url }}" alt="{{ event.name.text }} slide"/>

                <div class="carousel-caption d-none d-md-block">
                    <h5>{{ event.name.text }}</h5>
                    <p>{{ event.description.text }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>