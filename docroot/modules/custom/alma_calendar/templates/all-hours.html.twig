{#
/**
 * @file
 * Default theme implementation to display a list of Alma calendar records.
 *
 * Available variables:
 *   - records
 *
 * @ingroup themeable
 */
#}

<nav>
    <div class="nav nav-tabs justify-content-center" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-rivera-tab" data-toggle="tab" href="#nav-rivera" role="tab" aria-controls="nav-rivera" aria-selected="true">Tom치s Rivera Library</a>
        <a class="nav-item nav-link" id="nav-orbach-tab" data-toggle="tab" href="#nav-orbach" role="tab" aria-controls="nav-orbach" aria-selected="false">Orbach Science Library</a>
        <a class="nav-item nav-link" id="nav-music-tab" data-toggle="tab" href="#nav-music" role="tab" aria-controls="nav-music" aria-selected="false">Music Library</a>
        <a class="nav-item nav-link" id="nav-scua-tab" data-toggle="tab" href="#nav-scua" role="tab" aria-controls="nav-scua" aria-selected="false">Special Collections &amp; University Archives</a>
    </div>
</nav>
<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-rivera" role="tabpanel" aria-labelledby="nav-rivera-tab">
        <div class="row">
            <!-- Tom치s Rivera Library -->
            <div class="col-md-4">
                <div class="card hours">
                    <div class="card-header">
                        Tom치s Rivera Library
                    </div>
                    <ul class="list-group list-group-flush">
                        {% for day in rivera.day %}
                            <li class="list-group-item {% if loop.first %}bg-success{% endif %}">
                                <strong>{{ day.day_of_week.attributes.desc }}</strong>&nbsp;{{ day.date | date('n-j') }}
                                <span class="float-lg-right">
                                    {% for hour in day.hours %}
                                        {% if hour %}
                                            {{ hour.hour.from | date('g:ia') }}
                                            -
                                            {{ hour.hour.to | date('g:ia') }}
                                        {% else %}
                                            CLOSED
                                        {% endif %}
                                    {% endfor %}
                                </span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <!-- End Tom치s Rivera Library -->

            <!-- Library Administration -->
            <div class="col-md-4">
                <div class="card hours">
                    <div class="card-header">
                        Library Administration
                    </div>
                    <div class="card-body text-center">
                        <p>Open weekdays from 8am to 5pm</p>
                        <p>Located first floor Rivera.</p>
                    </div>
                </div>
            </div>
            <!-- End Library Administration -->

            <!-- Research Services Rivera -->
            <div class="col-md-4">
                <div class="card hours">
                    <div class="card-header">
                        Research Services Rivera
                    </div>
                    <div class="card-body text-center">
                        <p>Open weekdays from 10am to 5pm</p>
                        <p>Located first floor Rivera.</p>
                    </div>
                </div>
            </div>
            <!-- End Research Services Rivera -->
        </div>
    </div>
