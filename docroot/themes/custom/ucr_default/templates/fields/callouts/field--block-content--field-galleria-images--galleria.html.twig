{% set range = range(10, 90) %}
{% set randomNumber = random(range) %}

<div class="large reveal galleria-modal" id="galleriaModalView" data-reveal>
	<div class="galleria">
    {% for item in items %}
      <a href="{{ item.full }}"><img data-description="{{ item.content['#item'].title }}" src="{{ item.thumbnail }}"></a>
    {% endfor %}
  </div>
</div>
<div class="galleria-thumbs-wrap">
{% for item in items if not break %}
    <a class="galleria-show" href="#galleriaModalView" data-index="{{ loop.index - 1 }}" ><img src="{{ item.thumbnail }}"></a>
    {% if loop.index == 8 %}
        {% set break = true %}
    {% endif %}
{% endfor %}
</div>